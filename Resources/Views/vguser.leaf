#extend("base")

#export("head") {
    <title> VGUsers </title>
    <meta name="viewport" content="width=device-width, initial-scale=1"></meta>
    <link rel="stylesheet" href="/styles/Skeleton-2.0.4/normalize.css"></link>
    <link rel="stylesheet" href="/styles/Skeleton-2.0.4/skeleton.css"></link>
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Releway:400,300,600" type="text/css"></link>
}

#export("body") {
    <div class="container">
        <div class="row">
            <div class="u-full-width">
                <h2>All Users</h2>
            </div>
        </div>
        
        <div class="row">
            <div class="four columns">
                <h5>user id</h5>
            </div>
            <div class="four columns">
                <h5>user name</h5>
            </div>
            <div class="four columns">
                <h5>device id</h5>
            </div>
        </div>
        
        #loop(users, "user") {
            <div class="row">
                <div class="four columns">
                    <h5><span>#(user.id)</span></h5>
                </div>
                <div class="four columns">
                    <p>#(user.username)</p>
                </div>
                <div class="four columns">
                    <p>#(user.deviceid)</p>
                </div>
            </div>
        }
        
    </div>
}
